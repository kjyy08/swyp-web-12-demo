# Stage 1: 빌드
FROM node:20-alpine AS build

WORKDIR /app

COPY client/package.json client/package-lock.json ./
RUN npm ci

COPY client/ .
RUN npm run build

# Stage 2: nginx 서빙
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html
COPY gitops/docker/nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
